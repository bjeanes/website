<% content_for(:page_title) { concat h(archives_title) } -%>

<article class="archives">
  <h1>Archives</h1>
  
  <% if @months.empty? -%>
    <p>Once posts are added they will start to appear in this archive.</p>
  <% else -%>

    <% @months.each do |month| -%>
      <section>
        <h2><%= format_month(month.date) %></h2>
        <ol>
          <% month.posts.each do |post| -%>
            <li><%= link_to(post.title, post_path(post)) %><% unless post.tags.empty? %> <span class='tags'>(<%= linked_tag_list(post.tags) %>)</span><% end -%></li>
          <% end -%>
        </ol>
      </section>
    <% end -%>

  <% end -%>
</article>

<article class="archives">
  <h1>Categories</h1>
  
  <ul>
    <% category_links_for_navigation.each do |category| -%>
      <li><%= link_to(category.name, category.url) %></li>
    <% end -%>
  </ul>
</article>
