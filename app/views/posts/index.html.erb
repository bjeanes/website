<% content_for(:page_title) do %><%=h posts_title(@tag) %><% end -%>
<% content_for(:head)       do %><%= auto_discovery_link_tag(:atom, 'http://feeds.feedburner.com/begenius') %><% end -%>

<% if @posts.empty? -%>
	<article class="no-posts">There are no posts yet.</article>
<% else -%>
	<% @posts.each do |post| -%>
	  <%= render :partial => 'post', :locals => {:post => post} %>
	<% end -%>
  <% if false && more_content? -%>
    <article class="related">Looking for more? Head on over to the <%= link_to("archives", archives_path) %>.</div>
  <% end -%>
<% end -%>
